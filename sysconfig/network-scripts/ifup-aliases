#!/bin/sh

# adds aliases of device $1

device=$1
if [ "$device" = "" ]; then
	echo "usage: $0 <net-device>"
	exit 1
fi

current=0
while : ; do
	if [ ! -f /etc/sysconfig/network-scripts/$device:$current ]; then
	    return
	fi
	/etc/sysconfig/network-scripts/ifup $device:$current
	current=`expr $current + 1`
done
